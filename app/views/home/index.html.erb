<section class="row">
	<div class="container">		
		<div class="col s12 m8 l6 offset-s2 offset-l3">
			<div class="card">
				<div class="card-content">
					<h1 class="f-2 m-t-0">Tarefas</h1>
					<ul class="collection">
						<% @tarefas.each do |t| %>
							<li class="collection-item"><a href="/tasks/<%= t.id %>"><%= t.name %></a></li>
						<% end %>
					</ul>

				</div>
				<div class="card-action">
					<a href="/tasks/new" class="btn blue">Cadastrar tarefa</a>
				</div>
			</div>
		</div>
	</div>
</section>